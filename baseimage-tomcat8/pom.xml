<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>de.acosix.docker</groupId>
        <artifactId>acosix-docker-generic-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>baseimage-tomcat8</artifactId>

    <properties>
        <docker.from.name>baseimage</docker.from.name>
        <docker.from.version>1.0.0-SNAPSHOT</docker.from.version>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <targetPath>${project.build.directory}/ImageBuild</targetPath>
                <filtering>true</filtering>
            </resource>
        </resources>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>io.fabric8</groupId>
                    <artifactId>docker-maven-plugin</artifactId>
                    <configuration>
                        <images>
                        <!-- actually build four variant images with different Java versions -->
                            <image>
                                <name>${docker.image.id}-openjdk8</name>
                                <build>
                                    <dockerFile>Dockerfile-openjdk8</dockerFile>
                                    <args>
                                        <baseImageNameSuffix>-openjdk8</baseImageNameSuffix>
                                    </args>
                                </build>
                            </image>
                            <image>
                                <name>${docker.image.id}-openjdk11</name>
                                <build>
                                    <contextDir>${project.build.directory}/ImageBuild</contextDir>
                                    <dockerFile>Dockerfile-openjdk11</dockerFile>
                                    <args>
                                        <baseImageNameSuffix>-openjdk11</baseImageNameSuffix>
                                    </args>
                                    <tags>
                                        <tag>latest</tag>
                                        <tag>${project.version}</tag>
                                    </tags>
                                </build>
                            </image>
                            <image>
                                <name>${docker.image.id}-graalvm-java8</name>
                                <build>
                                    <contextDir>${project.build.directory}/ImageBuild</contextDir>
                                    <dockerFile>Dockerfile-graalvm8</dockerFile>
                                    <args>
                                        <baseImageNameSuffix>-graalvm-java8</baseImageNameSuffix>
                                    </args>
                                    <tags>
                                        <tag>latest</tag>
                                        <tag>${project.version}</tag>
                                    </tags>
                                </build>
                            </image>
                            <image>
                                <name>${docker.image.id}-graalvm-java11</name>
                                <build>
                                    <contextDir>${project.build.directory}/ImageBuild</contextDir>
                                    <dockerFile>Dockerfile-graalvm11</dockerFile>
                                    <args>
                                        <baseImageNameSuffix>-graalvm-java11</baseImageNameSuffix>
                                    </args>
                                    <tags>
                                        <tag>latest</tag>
                                        <tag>${project.version}</tag>
                                    </tags>
                                </build>
                            </image>
                        </images>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>